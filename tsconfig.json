{
	"extends": "./common/tsconfig-base.json",
    "compilerOptions": {
        "noEmit": true,
        "types": [
            "node",
            "connect-session-sequelize"
        ],
        "paths": {
            "*": [
                "./node_modules/@types/*",
                "./server/src/types"
            ]
        }
    },
    "include": [
        "client/src/**/*.ts",
        "server/src/**/*.ts",
        "common/src/**/*.ts"
    ]
}
