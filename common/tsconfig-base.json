{
    "compileOnSave": true,
    "compilerOptions": {
		"target": "es6",
        "moduleResolution": "node",
        "sourceMap": false,
        "strict": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,    
        "noUnusedLocals": true,     
        "noUnusedParameters": false,       
        "noImplicitReturns": true, 
        "noFallthroughCasesInSwitch": false
    }
}