{
    "compileOnSave": true,
    "compilerOptions": {
    	"target": "ES6",
    	"moduleResolution": "node",
    	"skipLibCheck": true,
    	"strict": true,
	    "noImplicitAny": true,
	    "strictNullChecks": true,
	    "noImplicitThis": true,
	    "alwaysStrict": true,    
	    "noUnusedLocals": true,     
	    "noUnusedParameters": true,       
	    "noImplicitReturns": true, 
	    "noFallthroughCasesInSwitch": true
    }
}